<%- include("partials/header.ejs") %>
<section id = "navbar">
    <div>
        <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
            <img src="./images/verdy-removebg-preview.png" alt="verdy" class="verdy">
        </a>
  </div>
</section>

<div class="container custom-container">
    <div class="main position-relative p-5 text-center text-muted border border-dashed rounded-5">
    <h2 class="mt-3 mb-5 title" style="color: <%= locals.color %>;"><%= locals.Heading %></h2>
    <hr class = "mt-2 mb-5 custom-hr" />
    <form action="/verify" method="POST">
        <div class = "container input-box">
            <input class = "mt-3 text-center custom-placeholder border-0" type="text" name="name" placeholder="What is your name?" value = "<%= locals.promptValue %>">
        </div>
        </br>
        <div class = "container input-box">
            <input class = "mt-3 text-center custom-placeholder border-0" type="text" name="password" placeholder="Password?" value = "<%= locals.promptValue %>">
        </div>
        </br>
        <input class="btn btn-light mx-5 mt-3 mb-5 gradient-background border-0" type="submit" name = "advance" value = "REGISTER"> </input>
        <input class="btn btn-light mx-5 mt-3 mb-5 gradient-background border-0" type="submit" name = "advance" value = "LOGIN"> </input>
        </form>
        <hr class = "mt-2 mb-4 custom-hr" />

<%- include("partials/footer.ejs") %>